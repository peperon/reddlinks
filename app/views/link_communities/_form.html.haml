= form_for @link_community do |f|
  - if @link_community.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link_community.errors.count, "error")} prohibited this link_community from being saved:"
      %ul
        - @link_community.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :link_id
    = f.number_field :link_id
  .field
    = f.label :community_id
    = f.number_field :community_id
  .actions
    = f.submit 'Save'
