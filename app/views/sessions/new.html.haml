%h1 Login

- if flash[:alert]
  %p{id="notice"}= flash[:alert]

= form_tag do
  .field
    = label_tag :name, "Username"
    = text_field_tag :name, params[:name]
  .field
    = label_tag :password, "Password"
    = password_field_tag :password, params[:password]
  .actions
    = submit_tag 'Login'
